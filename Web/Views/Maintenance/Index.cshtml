@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<title>Site is down for maintenance</title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<style>
		body {
			text-align: center;
			padding: 150px;
			font: 20px Helvetica, sans-serif;
			color: #333;
		}

		h1 {
			font-size: 50px;
		}

		article {
			display: block;
			text-align: left;
			width: 650px;
			margin: 0 auto;
		}

		a {
			color: #dc8100;
			text-decoration: none;
		}

			a:hover {
				color: #333;
				text-decoration: none;
			}
	</style>
</head>
<body>
	<!-- For use with AppSettings.config setting SiteDownForMaintenance -->
	<article>
		<h1>
			Site is temporarily unavailable.
		</h1>
		<p>
			We are currently performing scheduled maintenance. Site will be back soon.
		</p>
		<p>
			We apologize for any inconvenience.
		</p>
		<p>
			Click here to reload: @Html.ActionLink("refresh the page", ActionNames.Index, ControllerNames.Home)
		</p>
	</article>
</body>
</html>